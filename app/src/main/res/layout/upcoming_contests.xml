<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@id/upcoming_contest_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/upcoming_contest_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/leetcode" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/upcoming_contest_card"
        android:layout_toLeftOf="@+id/upcoming_contest_calendar">

        <TextView
            android:id="@+id/upcoming_contest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Contest Name"/>

        <TextView
            android:id="@+id/upcoming_contest_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contest Date"/>





    </LinearLayout>

    <ImageView
        android:id="@+id/upcoming_contest_calendar"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/baseline_calendar_month_24"
        android:layout_centerVertical="true"/>

</RelativeLayout>